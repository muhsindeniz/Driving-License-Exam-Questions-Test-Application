<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/Default_Konular"
            android:layout_width="355dp"
            android:layout_height="55dp"
            android:onClick="konular"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:background="@drawable/button1" />

        <ImageButton
            android:id="@+id/Default_Sorular"
            android:layout_width="355dp"
            android:layout_height="55dp"
            android:onClick="sorular"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button2" />

        <ImageButton
            android:id="@+id/Default_Yas"
            android:layout_width="355dp"
            android:onClick="yas"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button8" />

        <ImageButton
            android:id="@+id/Default_Document"
            android:layout_width="355dp"
            android:layout_height="55dp"
            android:onClick="belgeler"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button4" />

        <ImageButton
            android:id="@+id/Default_List"
            android:layout_width="355dp"
            android:onClick="plakalar"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button5" />

        <ImageButton
            android:id="@+id/Default_Share"
            android:layout_width="355dp"
            android:onClick="paylas"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button6" />

        <ImageButton
            android:id="@+id/Default_Contact"
            android:layout_width="355dp"
            android:onClick="iletisim"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/button7" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>